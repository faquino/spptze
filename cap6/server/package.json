{
  "name": "spptze-server",
  "version": "1.0.0",
  "description": "SPPTZE - Servidor central con API REST + Sequelize ORM + cliente MQTT + TTS + plantillas",
  "main": "./src/server.js",
  "scripts": {
    "start": "node --env-file=.env ./src/server.js",
    "dev": "nodemon --env-file=.env ./src/server.js",
    "test": "node --env-file=.env ./src/scripts/test-integration.js",
    "db:seed-db": "node --env-file=.env ./src/scripts/seed-db.js",
    "db:install-driver": "node --env-file=.env ./src/scripts/install-db-driver.js",
    "db:generate-data-dict": "node ./src/scripts/generate-data-dict.js"
  },
  "keywords": [
    "spptze",
    "queue",
    "display",
    "api",
    "mqtt",
    "sequelize",
    "express"
